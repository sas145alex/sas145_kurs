= form_for @hall do |f|
  = error_messages_for @hall

  .row
    .col-md-8
      .form-group
        = f.label :short_name
        = f.text_field :short_name, class: 'form-control'
    .col-md-8
      .form-group
        = f.label :full_name
        = f.text_area :full_name, class: 'form-control'
  .actions
    = f.submit nil, class: 'btn btn-primary'
