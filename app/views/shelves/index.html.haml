=breadcrumb_tag do
  %li.active
    Стеллажи
  %li
    Модели

%h1= t('app.shelves.index')

%table.table.table-hover.table-striped.center
  %caption
    .pull-right
      = link_to t('app.shelves.new-button'), new_shelf_path, class: 'btn btn-primary'

  %thead
    %tr
      %th= Shelf.human_attribute_name(:shelf_index)
      %th= Shelf.human_attribute_name(:hall)
      %th.p50
      %th.p50
      %th.p50

  %tbody
    - @shelves.order(:hall_id, :shelf_index).each do |shelf|
      %tr
        %td= shelf.shelf_index
        %td= shelf.hall.short_name
        %td
          = link_to shelf, class: 'btn btn-success' do
            = fa_icon :eye
        %td
          = link_to edit_shelf_path(shelf), class: 'btn btn-info' do
            = fa_icon :edit
        %td
          = link_to shelf, :method => :delete, :data => { :confirm => t('helpers.sure') }, class: 'btn btn-danger' do
            = fa_icon :times
